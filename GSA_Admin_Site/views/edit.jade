extends layout

mixin createOption(id, label, placeholder)
    label(for= id)= label
    select(id= id)
        option(selected= 'selected' disabled selection)= placeholder

block head
    link(rel='stylesheet', href='public/stylesheets/edit.css')
    script(src="public/javascripts/tinymce/tinymce.min.js")
    script(src="public/javascripts/edit.js")

block content
    ul.tabs
        li(class='tab-link current' data-tab='home') Home Page
        li(class='tab-link' data-tab='flags') Flags Page

    div(id='home' class='tab-content current loading')
        div.selection
            form#homeSelectForm
                +createOption('selectRow', 'Select Row', 'Loading...')
                br
                +createOption('selectSection', 'Select Section', 'Loading...')
                br
                input(type='submit' name='add' value='Add Section').positive
                input(type='submit' name='edit' value='Edit Section').neutral
                input(type='submit' name='delete' value='Delete Section').negative
    div(id='flags' class='tab-content')
        p Flags
